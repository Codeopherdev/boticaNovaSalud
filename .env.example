# Configuración de la Base de Datos
MONGODB_URI=mongodb://localhost:27017/nova-salud

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# Configuración de Sesiones
SESSION_SECRET=nova-salud-secret-key-2024-change-in-production

# Configuración de Seguridad
BCRYPT_ROUNDS=12

# Configuración de Alertas
ALERT_CHECK_INTERVAL=30
EXPIRATION_WARNING_DAYS=30

# Configuración de Email (opcional - para futuras implementaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Nova Salud <noreply@novasalud.com>

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de Backup (opcional)
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_PATH=./backups

# URLs y Configuraciones Externas
BASE_URL=http://localhost:3000
API_VERSION=v1

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Archivos
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Configuración de Cache
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379