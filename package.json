{
  "name": "nova-salud-inventory",
  "version": "1.0.0",
  "description": "Sistema de Inventario y Ventas para Nova Salud - Gestión profesional de productos farmacéuticos",
  "main": "app.js",
  "scripts": {
    "start": "node scripts/start-server.js",
    "dev": "nodemon app.js",
    "dev:3001": "cross-env PORT=3001 nodemon app.js",
    "server": "node app.js",
    "seed": "node utils/seedData.js",
    "reset": "node utils/resetDatabase.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "inventory",
    "pharmacy",
    "sales",
    "management",
    "healthcare",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Nova Salud",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "method-override": "^3.0.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nova-salud/inventory-system.git"
  },
  "bugs": {
    "url": "https://github.com/nova-salud/inventory-system/issues"
  },
  "homepage": "https://github.com/nova-salud/inventory-system#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
